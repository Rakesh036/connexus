<%- layout("/layouts/boilerplate") -%>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0">Events</h1>
        <div>
            <!-- Filter Dropdown Button -->
            <div class="btn-group">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="filterMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                    Filter by Event Type
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="filterMenuButton">
                    <li><a class="dropdown-item" href="/events?isOnline=true">Online Events</a></li>
                    <li><a class="dropdown-item" href="/events?isOnline=false">Offline Events</a></li>
                    <li><a class="dropdown-item" href="/events">All</a></li>
                </ul>
            </div>

            <!-- Create New Event Button -->
            <a href="events/new" class="btn btn-success ms-2">Create New Event</a>
        </div>
    </div>

    <!-- If events is empty, show a message -->
    <% if (events.length === 0) { %>
    <div class="alert alert-warning" role="alert">
        No events found.
    </div>
    <% } else { %>
    <div class="row">
        <% events.reverse().forEach(event => { %>
        <div class="col-md-4 mb-4">
            <div class="card event-card">
                <img class="card-img-top" src="<%= event.images.length ? event.images[0].url : '/images/default-event.jpg' %>" alt="<%= event.title %>">
                <div class="card-body">
                    <div class="upperpart">
                        <h5 class="card-title"><%= event.title %></h5>
                        <p class="card-text"><%= event.description.substring(0, 50) %>...</p>
                        <p class="card-text"><small class="text-muted">Date: <%= event.date.toDateString() %> | Time: <%= event.time %></small></p>
                        <p class="card-text"><small class="text-muted">Organized by: <%= event.organiser %></small></p>
                    </div>
                    <div class="lowerpart">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex">
                                <!-- Like button -->
                                <a href="/events/<%= event._id %>/like" class="btn btn-like btn-sm me-2">
                                    <%= event.likes.length %>&nbsp;
                                    <% if (currUser && event.likes.findIndex(like => like.equals(currUser._id)) > -1) { %>
                                    <i class="fa-solid fa-thumbs-up"></i>
                                    <% } else { %>
                                    <i class="fa-regular fa-thumbs-up"></i>
                                    <% } %>
                                </a>
                                <!-- Join button -->
                                <a href="/events/<%= event._id %>/join" class="btn btn-success btn-sm me-2">Join Event</a>
                            </div>
                            <!-- Read more button -->
                            <a href="/events/<%= event._id %>" class="btn btn-primary btn-sm readmore">Read More</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
    <% } %>
</div>
