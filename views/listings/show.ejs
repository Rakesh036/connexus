<% layout("/layouts/boilerplate") -%>
<div class="page-container">
    <div class="row mt-3">
        <div class="col-12 col-md-8 offset-md-2">
            <!-- Back to Posts with Icon -->
            <a href="/listings" class="btn btn-secondary d-inline-flex align-items-center">
                <i class="fa-solid fa-left-long"></i>
                Back to Posts
            </a>
            <br><br>
            <p class="card-text">Owned by: <i><%=listing.owner.username %></i></p>
            <h1><%= listing.title %></h1><br>
            <p class="lead"><%= listing.description %></p>

            <% if(currUser && currUser._id.equals(listing.owner._id)){ %>
            <div class="btns">
                <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark edit-btn add-btn d-inline-flex align-items-center">
                    <i class="fa-solid fa-edit"></i> Edit
                </a>
                <form action="/listings/<%=listing._id %>?_method=delete" method="post" class="d-inline">
                    <button type="submit" class="btn btn-dark add-btn d-inline-flex align-items-center">
                        <i class="fa-solid fa-trash"></i> Delete
                    </button>
                </form>
            </div>
            <% } %>
        </div>

        <div class="col-12 col-md-8 offset-md-2" id="comment-section">
            <% if(currUser){ %>
            <form action="/listings/<%= listing._id %>/reviews" method="post" class="needs-validation" novalidate>
                <hr>
                <div class="mb-3">
                    <label for="comment" class="form-label">
                        <h5>Leave a Comment</h5>
                    </label>
                    <textarea name="review[comment]" class="form-control" id="comment" rows="3" required></textarea>
                    <div class="invalid-feedback">Please add some comment for review.</div>
                </div>
                <button type="submit" class="btn btn-dark add-btn d-inline-flex align-items-center">
                    <i class="fa-solid fa-paper-plane"></i> Submit
                </button>
            </form>
            <% } %>
        </div>

        <div class="col-12 col-md-8 offset-md-2 mb-3">
            <hr>
            <h4>All Reviews</h4>
            <div class="row">
                <% listing.reviews.forEach(review => { %>
                <div class="card col-12 col-md-5 ms-3 mb-3">
                    <div class="card-body">
                        <div class="card-title"><i>@<%=review.author.username %></i></div>
                        <p class="card-text"><%=review.comment %></p>

                        <% if(currUser && review.author._id.equals(currUser._id)) {%>
                        <span>
                            <form action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=delete"
                                method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger d-inline-flex align-items-center">
                                    <i class="fa-solid fa-trash"></i> Delete
                                </button>
                            </form>
                        </span>
                        <% } %>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        if (window.location.hash === '#comment-section') {
            document.getElementById('comment-section').scrollIntoView({ behavior: 'smooth' });

            setTimeout(function () {
                const commentInput = document.getElementById('comment');
                if (commentInput) {
                    commentInput.focus();
                }
            }, 1);
        }
    });
</script>