<%- layout("/layouts/boilerplate") -%>

<div class="container page-container">
    <h1 class="text-center mb-4">Posts</h1>
    <a href="/successes/new" class="btn btn-success mb-3">Create Success of Your and Batchmate</a>
    <div class="row">
        <% successes.reverse().forEach(success => { %>
        <div class="col-md-4 mb-4">
            <div class="card post-card">
                <div class="card-body">
                    <div class="upperpart">
                        <img src="<%= success.image.url %>" alt="img" class="img-fluid">
                        <h5 class="card-title"><%= success.title %></h5>
                        <p class="card-text"><%= success.description.substring(0, 50) %>...</p>
                    </div>
                    <div class="lowerpart">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex">
                                <!-- Like button -->
                                <a href="/successes/<%= success._id %>/like" class="btn btn-like btn-sm me-2">
                                    <%= success.likes.length %>&nbsp;
                                    <% if (currUser && success.likes.findIndex(like => like.equals(currUser._id)) > -1) { %>
                                    <i class="fa-solid fa-thumbs-up"></i>
                                    <% } else { %>
                                    <i class="fa-regular fa-thumbs-up"></i>
                                    <% } %>
                                </a>
                                <!-- Comment button -->
                                <a href="/successes/<%= success._id %>/comment" class="btn btn-comment btn-sm me-2">
                                    <i class="fa-solid fa-comment"></i>
                                </a>
                                <!-- Report button (commented out) -->
                                <!-- <a href="/successes/<%= success._id %>/report" class="btn btn-report btn-sm">
                                    <%# success.reports.length %>&nbsp;<i class="fa-solid fa-flag"></i>
                                </a> -->
                            </div>
                            <!-- Read more button -->
                            <a href="/successes/<%= success._id %>" class="btn btn-primary btn-sm readmore">Read
                                More</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>