<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
    <div class="col-6 offset-3">
        <!-- Back to Posts with Icon -->
        <a href="/successes" class="btn btn-secondary d-inline-flex align-items-center">
            <i class="fa-solid fa-left-long"></i> Back to Posts
        </a>
        <br><br>
        <h3>Edit Success Story</h3>
        <form action="/successes/<%= successStory._id %>?_method=PUT" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" id="title" name="success[title]" class="form-control" value="<%= successStory.title %>" required>
                <div class="invalid-feedback">Please enter a title.</div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Content</label>
                <textarea id="description" name="success[description]" class="form-control" rows="4" required><%= successStory.description %></textarea>
                <div class="invalid-feedback">Please enter the content.</div>
            </div>

            <button class="btn btn-primary mt-3" type="submit">Update Post</button>
        </form>
    </div>
</div>
