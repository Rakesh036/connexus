<% layout("/layouts/boilerplate") -%>
<div class="container mt-3">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <!-- Back to Posts with Icon -->
            <a href="/successes" class="btn btn-secondary d-inline-flex align-items-center">
                <i class="fa-solid fa-left-long"></i>
            </a>
            <br><br>
            <p class="card-text">Owned by: <i><%= successStory.owner.username %></i></p>
            <hr>
            <%#successStory.image  %>
            <hr><img src="<%=successStory.image.url  %>" alt="img">
            <h1><%= successStory.title %></h1><br>
            <p class="lead"><%= successStory.description %></p>

            <% if (currUser && currUser._id.equals(successStory.owner._id)) { %>
            <div class="btns">
                <a href="/successes/<%= successStory._id %>/edit" class="btn btn-dark col-1  edit-btn">Edit</a>
                <form action="/successes/<%= successStory._id %>?_method=delete" method="post">
                    <button class="btn btn-dark  offset-5">Delete</button>
                </form>
            </div>
            <% } %>
        </div>

        <div class="col-6 offset-3" id="comment-section">
            <% if (currUser) { %>
            <form action="/successes/<%= successStory._id %>/reviews" method="post" class="needs-validation" novalidate>
                <hr>
                <label for="comment" class="form-label">
                    <h5>Leave a Comment</h5>
                </label>
                <textarea name="review[comment]" class="form-control" id="comment" cols="20" rows="3"
                    required></textarea>
                <div class="invalid-feedback">Please add a comment for the review</div><br>
                <button type="submit" class="btn btn-outline-dark">Submit</button>
            </form>
            <% } %>
        </div>

        <div class="col-6 offset-3 mb-3">
            <hr>
            <h4>All Reviews</h4>
            <div class="row">
                <% if (successStory.reviews.length > 0) { %>
                <% successStory.reviews.forEach(review => { %>
                <div class="card col-5 ms-3 mb-3">
                    <div class="card-body">
                        <div class="card-title"><i>@<%= review.author.username %></i></div>
                        <p class="card-text"><%= review.comment %></p>

                        <% if (currUser && review.author._id.equals(currUser._id)) { %>
                        <form action="/successes/<%= successStory._id %>/reviews/<%= review._id %>?_method=delete"
                            method="post">
                            <button class="btn btn-sm btn-danger mb-3">Delete</button>
                        </form>
                        <% } %>
                    </div>
                </div>
                <% }) %>
                <% } else { %>
                <p>No reviews yet.</p>
                <% } %>
            </div>
        </div>
    </div>

</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        if (window.location.hash === '#comment-section') {
            document.getElementById('comment-section').scrollIntoView({ behavior: 'smooth' });

            setTimeout(function () {
                const commentInput = document.getElementById('comment');
                if (commentInput) {
                    commentInput.focus();
                }
            }, 1);
        }
    });
</script>