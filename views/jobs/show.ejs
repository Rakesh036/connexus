<%- layout("/layouts/boilerplate") -%>
<div class="container mt-3">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <!-- Back to Jobs with Icon -->
            <a href="/jobs" class="btn btn-secondary d-inline-flex align-items-center">
                <i class="fa-solid fa-left-long"></i>
                Back to Jobs
            </a>
            <br><br>
            <h1><%= job.title %></h1>
            <p class="lead">Company: <%= job.companyName %></p>
            <p class="lead">Location: <%= job.location %></p>
            <p class="lead">Job Type: <%= job.jobType %></p>
            <p class="lead">Salary: $<%= job.salary ? job.salary.toLocaleString() : 'Not specified' %> per year</p>
            <p class="lead">Apply at: <a href="<%= job.applyLink %>" target="_blank"><%= job.applyLink %></a></p>

            <% if(currUser && currUser._id.equals(job.owner._id)){ %>
            <div class="btns">
                <a href="/jobs/<%= job._id %>/edit" class="btn btn-dark">Edit</a>
                <form action="/jobs/<%= job._id %>?_method=delete" method="post" class="d-inline">
                    <button class="btn btn-dark">Delete</button>
                </form>
            </div>
            <% } %>
        </div>

        <div class="col-md-8 offset-md-2" id="comment-section">
            <% if(currUser){ %>
            <form action="/jobs/<%= job._id %>/reviews" method="post" class="needs-validation" novalidate>
                <hr>
                <label for="comment" class="form-label">
                    <h5>Leave a Comment</h5>
                </label>
                <textarea name="jobReview[comment]" class="form-control" id="comment" cols="20" rows="3"
                    required></textarea>
                <div class="invalid-feedback">Please add a comment for the review.</div><br>
                <button type="submit" class="btn btn-outline-dark">Submit</button>
            </form>
            <% } %>
        </div>

        <div class="col-md-8 offset-md-2 mb-3">
            <hr>
            <h4>All Reviews</h4>
            <div class="row">
                <% job.reviews.forEach(review => { %>
                <div class="card col-md-5 ms-3 mb-3">
                    <div class="card-body">
                        <div class="card-title"><i>@<%= review.author.username %></i></div>
                        <p class="card-text">
                            <%= review.comment %>
                        </p>

                        <% if(currUser && review.author._id.equals(currUser._id)) { %>
                        <span>
                            <form action="/jobs/<%= job._id %>/reviews/<%= review._id %>?_method=delete" method="post"
                                class="d-inline">
                                <button class="btn btn-sm btn-danger mb-3">Delete</button>
                            </form>
                        </span>
                        <% } %>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Check if the URL has a fragment identifier
        if (window.location.hash === '#comment-section') {
            // Scroll to the comment section
            document.getElementById('comment-section').scrollIntoView({ behavior: 'smooth' });

            // Use setTimeout to ensure the element is focused after scrolling
            setTimeout(function () {
                const commentInput = document.getElementById('comment');
                if (commentInput) {
                    commentInput.focus();
                }
            }, 1); // Adjust timeout as needed
        }
    });
</script>