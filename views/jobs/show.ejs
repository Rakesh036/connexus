<%- layout("/layouts/boilerplate") -%>
<div class="page-container">
    <div class="row mt-3">
        <div class="col-12 col-md-8 offset-md-2">
            <!-- Back to Jobs with Icon -->
            <div class="d-flex justify-content-between align-items-center">
                <a href="/jobs" class="btn btn-back d-inline-flex align-items-center">
                    <i class="fa-solid fa-left-long"></i>
                </a>
                <% if(currUser && currUser._id.equals(job.owner._id)){ %>
                <div class="btns">
                    <a href="/jobs/<%= job._id %>/edit" class="btn btn-edit d-inline-flex align-items-center">
                        <i class="fa-solid fa-edit"></i>
                    </a>
                    <form action="/jobs/<%= job._id %>?_method=delete" method="post" class="d-inline">
                        <button type="submit" class="btn btn-delete d-inline-flex align-items-center">
                            <i class="fa-solid fa-trash"></i>
                        </button>
                    </form>
                </div>
                <% } %>
            </div>
            <br><br>
            <h1><%= job.title %></h1>
            <p class="lead">Company: <%= job.companyName %></p>
            <p class="lead">Location: <%= job.location %></p>
            <p class="lead">Job Type: <%= job.jobType %></p>
            <p class="lead">Salary: $<%= job.salary ? job.salary.toLocaleString() : 'Not specified' %> per year</p>
            <p class="lead">Apply at: <a href="<%= job.applyLink %>" target="_blank"><%= job.applyLink %></a></p>

        </div>

        <div class="col-12 col-md-8 offset-md-2" id="comment-section">
            <% if(currUser){ %>
            <form action="/jobs/<%= job._id %>/reviews" method="post" class="needs-validation" novalidate>
                <hr>
                <label for="comment" class="form-label">
                    <h5>Leave a Comment</h5>
                </label>
                <textarea name="jobReview[comment]" class="form-control" id="comment" rows="3" required></textarea>
                <div class="invalid-feedback">Please add a comment for the review.</div><br>
                <button type="submit" class="btn btn-submit d-inline-flex align-items-center">
                    <i class="fa-solid fa-paper-plane"></i> Submit
                </button>
            </form>
            <% } %>
        </div>

        <div class="col-12 col-md-8 offset-md-2 mb-3">
            <hr>
            <h4>All Reviews</h4>
            <div class="row">
                <% job.reviews.forEach(review => { %>
                <div class="card col-12 col-md-5 ms-3 mb-3 review-card">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="card-title review-username"><i>@<%= review.author.username %></i></div>
                        <% if(currUser && review.author._id.equals(currUser._id)) { %>
                        <form action="/jobs/<%= job._id %>/reviews/<%= review._id %>?_method=delete" method="post"
                            class="d-inline">
                            <button type="submit"
                                class="btn btn-sm btn-danger review-delete-btn d-inline-flex align-items-center">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </form>
                        <% } %>
                    </div>
                    <p class="card-text review-comment"><%= review.comment %></p>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Check if the URL has a fragment identifier
        if (window.location.hash === '#comment-section') {
            // Scroll to the comment section
            document.getElementById('comment-section').scrollIntoView({ behavior: 'smooth' });

            // Use setTimeout to ensure the element is focused after scrolling
            setTimeout(function () {
                const commentInput = document.getElementById('comment');
                if (commentInput) {
                    commentInput.focus();
                }
            }, 1); // Adjust timeout as needed
        }
    });
</script>